  dön (mod & BelgeTürleri::IFMT) == BelgeTürleri::IFBLK;

sanal iş 
S_ISFIFO mod mode_t : eh =>
  dön (mod & BelgeTürleri::IFMT) == BelgeTürleri::IFIFO;

sanal iş 
